
<div class="backg">
        <h1>Update Product</h1>
    
        <% if flash[:errors] %>
            <% flash[:errors].each do |e| %>
                <%= e %>
            <% end %>
        <% end %>
    
        <%= form_for @product do |f| %>
              <div>
                  <%= f.label :name, "Name: " %>
                  <%= f.text_field :name %>
              </div>
                          
              <div>
                  <%= f.label :price, "Price" %>
                  <%= f.text_area :price %>
              </div>
              
              <div>
                  <%= f.label :image, "Product image" %>
                  <%= f.file_field :image %>
              </div>
              
                  <%= f.submit %>
              </div> 
                  
                  <% end %>
    </div>
      